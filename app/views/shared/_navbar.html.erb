<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to "NotTwitter", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Inicio", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Descubrir", discover_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <div class="d-flex border-right border-left mx-4 py-0">
            <li class="nav-item active">
             <div class="container">
               <%= image_tag(current_user.profilepic, size: "30", class: "rounded-circle") %>
               <%= link_to current_user.username, user_path(current_user.id), class: "nav-link" %>
             </div>
             <li class="nav-item active">
                 <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete, class: "nav-link" %>
             </li>
          </div>
        </li>
        <% else %>
          <li class="nav-item active">
              <%= link_to "Registrarse", new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
              <%= link_to "Iniciar sesion", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Admin", admin_users_path, class: "nav-link" %>
        </li>
        <% end %>

        <%= search_form_for @q, url: tweets_path, html: { class: "form-inline my-2 my-lg-0" } do |f| %>
          <%= f.search_field :content_cont, class: "form-control mr-sm-2", placeholder: "Buscar" %>
          <%= f.submit(class: "btn btn-outline-success my-2 my-sm-0") %>
        <% end %>

    </div>
</nav>